<!--pages/camera.wxml-->
  <view style="text-align: center;">眨眨眼</view>
  <camera mode="normal" device-position="front" flash="auto" binderror="error" style="width: 100%; height: 250px;">
    <cover-view class="controls">
      <cover-image class="img" src="../../images/notice.png" style="width:100%; height:10%" />
    </cover-view>
    <cover-view class="noticeTXT">请将头部放入框内</cover-view>
  </camera>
  <button type="primary" bindtap="takeVideoStart">开始核验</button>
  <button type="primary" bindtap="takeVideoEnd">结束核验</button>
  <image mode="widthFix" src="{{src}}"></image>